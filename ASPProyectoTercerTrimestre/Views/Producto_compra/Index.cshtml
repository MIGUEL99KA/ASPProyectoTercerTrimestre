@model IEnumerable<ASPProyectoTercerTrimestre.Models.producto_compra>

@{
    ViewBag.Title = "Producto_Compra Lista";
}

<h2>Lista Producto-Compra</h2>

<p>
    @Html.ActionLink("Crear Producto-Compra", "Create")
</p>
<table class="table table-bordered table-hover">
    <tr>
        <th>
            Compra
        </th>
        <th>
            Producto
        </th>
        <th>
            Cantidad 
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id_compra)
            </td>
            <td>
                @ASPProyectoTercerTrimestre.Controllers.Producto_compraController.NombreProducto(item.id_producto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cantidad)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.id }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.id }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.id }, new { @class = "linkDelete" })
            </td>
        </tr>
    }

</table>

@section scripts{
    <script>
        $(".linkDelete").click(function (event) {
            if (!confirm('¿Esta seguro de Eliminar?')) {
                event.preventDefault();
            }
        })
    </script>
}
