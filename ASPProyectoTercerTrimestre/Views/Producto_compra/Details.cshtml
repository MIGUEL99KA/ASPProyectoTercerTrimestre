@model ASPProyectoTercerTrimestre.Models.producto_compra

@{
    ViewBag.Title = "Details";
}

<h2>Detailles</h2>

<div>
    <h4>Producto-Compra</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Compra
        </dt>

        <dd>
            @Html.DisplayFor(model => model.id_compra)
        </dd>

        <dt>
            Producto
        </dt>

        <dd>
            @ASPProyectoTercerTrimestre.Controllers.Producto_compraController.NombreProducto(Model.id_producto)
        </dd>

        <dt>
            Cantidad
        </dt>

        <dd>
            @Html.DisplayFor(model => model.cantidad)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.id }) |
    @Html.ActionLink("Regresar a la lista", "Index")
</p>
