@{
    ViewBag.Title = "Cargar Imagen";
}

<h2>Cargar imagen</h2>

@using (Html.BeginForm("cargarImagen", "Producto_imagen", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label class="control-label col-md-2">Imagen</label>
        <div class="col-md-10">
            <input type="file" name="imagen" class="form-control" required />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2" for="id_producto">producto</label>
        <div class="col-md-10">
            @Html.Action("listarProductos")
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Enviar" class="form-control"/>
        </div>
    </div>



}
