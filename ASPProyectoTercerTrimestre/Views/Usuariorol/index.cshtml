@model IEnumerable<ASPProyectoTercerTrimestre.Models.usuariorol>

@{
    ViewBag.Title = "index";
}

<h2>Lista Usuario-Rol</h2>

<p>
    @Html.ActionLink("Crear Usuario-Rol", "Create")
</p>
<table class="table table-bordered table-hover">
    <tr>
        <th>
            Usuario
        </th>
        <th>
            Rol
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @ASPProyectoTercerTrimestre.Controllers.UsuariorolController.NombreUsuario(item.idUsuario)
            </td>
            <td>
                @ASPProyectoTercerTrimestre.Controllers.UsuariorolController.NombreRoles(item.idRol)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.id }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.id }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.id }, new {@class = "linkDelete" })
            </td>
        </tr>
    }

</table>

@section scripts{
    <script>
        $(".linkDelete").click(function (event) {
            if (!confirm('¿Esta seguro de Eliminar?')) {
                event.preventDefault();
            }
        })
    </script>
}
